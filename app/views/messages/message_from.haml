- page_title("Messages -#{User.find(params[:id]).firstName}")


= render :partial => "compose"

- if @messages.empty?
  %h2
    You have shared interest, start the discussion

%ul.list
  - @messages.each do |message|
    %li
      %img{src:"#{message.sender.picture_url}", width:"40px", height:"40px"}
      = message.content
      = link_to "X", "/messages/#{message.id}", method: :delete, class:"button-negative"